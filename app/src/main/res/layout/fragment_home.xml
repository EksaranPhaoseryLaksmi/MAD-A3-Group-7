<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fashionstore1"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fashionstore"
        android:layout_marginTop="16dp" />

        <!-- App Name -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fashion Store"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <!-- Shop Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Fashion Store â€” your one-stop shop for trendy clothing and accessories."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="left"
            android:layout_marginTop="12dp"
            android:padding="8dp" />

        <!-- Banner or Product Image -->
        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/fashionstore3"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp" />

        <!-- Address -->
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Address: #123 Street, Phnom Penh, Cambodia"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <!-- Contact Info -->
        <TextView
            android:id="@+id/contact_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž Phone: +855 12 345 678"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“˜ Facebook: FashionStoreKH"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¸ Instagram: @fashionstore.kh"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/telegram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“² Telegram: @fashionstore"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
